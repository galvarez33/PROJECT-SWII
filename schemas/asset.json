{
    "$schema": "https://json-schema.org/draft/2020-12/schema#",
    "title": "Asset post",
    "description": "Json schema para los activos a la hora de hacer un post",
    "type": "object",
    "additionalProperties": true,
    "required": [
        "id",
        "ocurrencias"
    ],
    "properties": {
        "id": {
            "type": "string",
            "format": "email"
        },
        "ocurrencias": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "timestamp",
                    "source"
                ],
                "properties": {
                    "timestamp": {
                        "type": "string",
                        "format": "date"
                    },
                    "source": {
                        "type": "string",
                        "format": "uri"
                    }
                }
            }
        }
    }
}